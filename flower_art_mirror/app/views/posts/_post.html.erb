<%= stylesheet_link_tag "rotate.css" %>
<%= stylesheet_link_tag "table.css" %>
<div class="row">
  <table style="width: 100%">
    <tr valign="middle">
        <th class='col-md-1 text-center' style="width: 1%">
        <% if logged_in? %>
          <%= link_to vote_post_path(post, vote: true), method: 'post' do %>
            <img src="http://por.tw/edm/attachments/201304/0357596881.jpg" alt="Like!" width="42" height="42" border="0">
          <% end %>
        <%end %>

        <br/>
        <%= post.total_votes %><br>
        Votes
        <br/>

        <% if logged_in? %>
            <%= link_to vote_post_path(post, vote: false), method: 'post' do %>
            <img src="http://por.tw/edm/attachments/201304/0357596881.jpg" alt="Like!" width="42" height="42" border="0" class="rotateimg180">
            <% end %>
        <% end %>
      </th>
      <th class="col-md-3">
        <div class="well  well-lg" style="width: 100%">
          <%= render partial: "categories/category", collection: post.categories %>
          <p>
            <h4><b><%= post.title %></b></h4>
          </p>
          <div>
            <%= post.content %>
          </div>
          <br>
          <span style="float: left;">Posted by: <%= " #{post.user.name}" %></span><span style="float: right;"> Post at: <%= post.created_at =%></span>
          <br>
          <div>
            <%= link_to "show this post", post_path(post) %>
          </div>
       </div>
      </th>
    </tr>
  </table>
</div>